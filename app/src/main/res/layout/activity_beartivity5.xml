<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MoveForResultBeartivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih Angka"/>
    <RadioGroup
        android:id="@+id/bear_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/id_50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50 Points"
            />
        <RadioButton
            android:id="@+id/id_100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100 Points"
            />
        <RadioButton
            android:id="@+id/id_150"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="150 Points"
            />
        <RadioButton
            android:id="@+id/id_200"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="200 Points"
            />
    </RadioGroup>
    <Button
        android:id="@+id/btn_choose_points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rate"
        />

</LinearLayout>